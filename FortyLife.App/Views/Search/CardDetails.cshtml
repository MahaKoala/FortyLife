@model FortyLife.Data.Scryfall.Card

@{
    ViewBag.Title = Model.Name;
}

@section Scripts{
    @Scripts.Render("~/bundles/rainbowtext")
    @Scripts.Render("~/bundles/tooltipjs")
}

@if (Model.IsDoubleFaced)
{
    @Html.Partial("_DoubleFaceCardDetails", Model);
}
else
{
    @Html.Partial("_SingleFaceCardDetails", Model);
}
